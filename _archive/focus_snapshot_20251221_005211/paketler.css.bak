/* Paketler & Products shared layout */
:root {
  --nv-ink: #111;
  --nv-muted: #4d4d4d;
  --nv-line: #e7e2d7;
  --nv-card: #fffdf8;
  --nv-bg: #f6f2ea;
  --nv-gold: #d4af37;
  --nv-entry: #6ea86f;
  --nv-value: #4a84d8;
  --nv-premium: #7c5ac2;
  --nv-radius: 16px;
  --nv-shadow: 0 14px 40px rgba(0, 0, 0, .08);
  --nv-heatmap-dock-pad: 0px;
}

*,
*::before,
*::after {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: "Segoe UI", system-ui, -apple-system, sans-serif;
  background: var(--nv-bg);
  color: var(--nv-ink);
}

main {
  max-width: 1080px;
  margin: 0 auto;
  padding: 120px 18px 80px;
}

a {
  color: inherit;
}

.nv-hero {
  background: linear-gradient(135deg, rgba(212, 175, 55, 0.12), rgba(255, 255, 255, 0.85));
  border: 1px solid rgba(212, 175, 55, .3);
  border-radius: 20px;
  padding: 26px 22px;
  box-shadow: var(--nv-shadow);
}

.nv-hero h1 {
  margin: 0 0 10px;
  letter-spacing: .04em;
}

.nv-hero p {
  margin: 0 0 14px;
  color: var(--nv-muted);
}

.nv-cta-row {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-bottom: 12px;
}

.nv-cta--secondary {
  background: #fff;
  color: var(--nv-ink);
  border-color: rgba(17, 17, 17, .2);
  box-shadow: none;
}

.packages-intro-copy {
  margin-top: 18px;
  padding: 16px 18px;
  border-radius: 18px;
  border: 1px solid rgba(17, 17, 17, 0.08);
  background: rgba(255, 255, 255, 0.7);
  box-shadow: var(--nv-shadow);
}

.packages-intro-copy p {
  margin: 0 0 8px;
  color: var(--nv-muted);
  line-height: 1.6;
}

.packages-intro-copy .lead {
  margin-bottom: 6px;
  font-weight: 600;
  color: var(--nv-ink);
}

.packages-intro-copy .note {
  margin: 0;
}

.nv-cta {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 10px 16px;
  border-radius: 999px;
  border: 1px solid rgba(212, 175, 55, .55);
  background: rgba(255, 247, 223, .9);
  color: #2c1c00;
  text-decoration: none;
  font-weight: 600;
  box-shadow: 0 10px 26px rgba(212, 175, 55, .18);
}

.nv-pack-section {
  margin-top: 32px;
}

.nv-pack-header h2 {
  margin: 0 0 6px;
  font-size: 22px;
}

.nv-pack-header p {
  margin: 0;
  color: var(--nv-muted);
}

.nv-card-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 16px;
  margin-top: 14px;
}

.nv-card {
  background: var(--nv-card);
  border-radius: var(--nv-radius);
  border: 1px solid var(--nv-line);
  padding: 16px 16px 18px;
  box-shadow: var(--nv-shadow);
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.nv-card h3 {
  margin: 0;
  font-size: 17px;
  line-height: 1.3;
}

.nv-badge {
  display: inline-block;
  padding: 4px 10px;
  border-radius: 999px;
  font-size: 12px;
  font-weight: 700;
  letter-spacing: .04em;
  color: #fff;
}

.nv-tier-entry .nv-badge { background: var(--nv-entry); }
.nv-tier-value .nv-badge { background: var(--nv-value); }
.nv-tier-premium .nv-badge { background: var(--nv-premium); }

.nv-meta {
  margin: 0;
  color: var(--nv-muted);
  font-size: 14px;
  line-height: 1.5;
}

.nv-list {
  margin: 0;
  padding-left: 18px;
  color: var(--nv-ink);
  line-height: 1.5;
}

.nv-list li {
  margin: 4px 0;
}

.nv-upgrade {
  margin: 0;
  font-size: 14px;
  color: #2f2a1d;
}

.nv-price {
  margin: 0;
  font-size: 14px;
  font-weight: 700;
  color: #1f1a0f;
}

.nv-slot-chip {
  position: fixed;
  right: 16px;
  bottom: 16px;
  z-index: 50;
  border: 1px solid rgba(17, 17, 17, .08);
  background: #111;
  color: #f7f1e4;
  border-radius: 999px;
  padding: 10px 14px;
  font-size: 13px;
  letter-spacing: .01em;
  box-shadow: 0 12px 28px rgba(0, 0, 0, .18);
  cursor: pointer;
}

.nv-slot-chip:hover {
  box-shadow: 0 14px 32px rgba(0, 0, 0, .22);
}

.nv-slot-toast {
  position: fixed;
  left: 50%;
  bottom: 24px;
  transform: translateX(-50%);
  background: #111;
  color: #f7f1e4;
  padding: 10px 14px;
  border-radius: 12px;
  font-size: 13px;
  opacity: 0;
  transition: opacity .18s ease;
  z-index: 60;
}

.nv-slot-toast.is-on {
  opacity: 0.95;
}

.nv-heat-chip {
  position: fixed;
  left: 16px;
  bottom: 16px;
  z-index: 50;
  border: 1px solid rgba(17, 17, 17, .08);
  background: #111;
  color: #f7f1e4;
  border-radius: 999px;
  padding: 10px 14px;
  font-size: 13px;
  letter-spacing: .01em;
  box-shadow: 0 12px 28px rgba(0, 0, 0, .18);
  cursor: pointer;
}

.nv-heat-chip:hover {
  box-shadow: 0 14px 32px rgba(0, 0, 0, .22);
}

.nv-heat-overlay {
  position: fixed;
  inset: 0;
  z-index: 60;
  background: rgba(0, 0, 0, .55);
  display: none;
}

.nv-heat-overlay.is-on { display: block; }

.nv-heat-panel {
  position: absolute;
  right: 16px;
  bottom: 120px;
  width: min(680px, calc(100vw - 32px));
  max-height: min(70vh, 680px);
  overflow: auto;
  border-radius: 18px;
  border: 1px solid rgba(255, 255, 255, .14);
  background: rgba(12, 12, 12, .78);
  backdrop-filter: blur(12px);
  color: #fff;
  box-shadow: 0 18px 60px rgba(0, 0, 0, .45);
}

.nv-heat-head {
  display: flex;
  gap: 12px;
  justify-content: space-between;
  align-items: flex-start;
  padding: 14px 14px 10px;
  border-bottom: 1px solid rgba(255, 255, 255, .10);
}

.nv-heat-title { font: 700 13px/1.2 system-ui,-apple-system,"Segoe UI",Roboto,Arial; letter-spacing: .06em; }
.nv-heat-ver { opacity: .75; font-weight: 600; }
.nv-heat-sub { opacity: .8; font: 500 12px/1.25 system-ui,-apple-system,"Segoe UI",Roboto,Arial; margin-top: 4px; }

.nv-heat-actions { display: flex; gap: 8px; }
.nv-heat-btn {
  padding: 8px 10px;
  border-radius: 12px;
  border: 1px solid rgba(255, 255, 255, .14);
  background: rgba(255, 255, 255, .06);
  color: #fff;
  cursor: pointer;
  font: 600 12px/1 system-ui,-apple-system,"Segoe UI",Roboto,Arial;
}
.nv-heat-btn.danger { background: rgba(255, 70, 70, .12); border-color: rgba(255, 70, 70, .25); }

.nv-heat-body { padding: 12px 14px 14px; }

.nv-heat-kpis {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10px;
  margin-bottom: 12px;
}
.nv-heat-kpi {
  padding: 10px 12px;
  border-radius: 14px;
  border: 1px solid rgba(255, 255, 255, .10);
  background: rgba(255, 255, 255, .05);
}
.nv-heat-kpi .k { opacity: .8; font: 600 11px/1 system-ui,-apple-system,"Segoe UI",Roboto,Arial; }
.nv-heat-kpi .v { font: 800 18px/1.2 system-ui,-apple-system,"Segoe UI",Roboto,Arial; margin-top: 6px; }

.nv-heat-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 10px;
}
.nv-heat-card {
  padding: 12px;
  border-radius: 16px;
  border: 1px solid rgba(255, 255, 255, .10);
  background: rgba(255, 255, 255, .04);
}
.nv-heat-card.span2 { grid-column: 1 / -1; }
.nv-heat-card h3 {
  margin: 0 0 10px;
  font: 700 12px/1.2 system-ui,-apple-system,"Segoe UI",Roboto,Arial;
  opacity: .9;
}

.nv-heat-list .row {
  display: flex;
  justify-content: space-between;
  gap: 10px;
  padding: 6px 0;
  border-bottom: 1px solid rgba(255, 255, 255, .08);
}
.nv-heat-list .row:last-child { border-bottom: none; }
.nv-heat-list .name { opacity: .92; }
.nv-heat-list .count { font-weight: 800; }

.nv-heat-table-wrap { overflow: auto; border-radius: 12px; }
.nv-heat-table {
  width: 100%;
  border-collapse: collapse;
  font: 600 12px/1.25 system-ui,-apple-system,"Segoe UI",Roboto,Arial;
}
.nv-heat-table th,
.nv-heat-table td {
  padding: 8px 10px;
  border-bottom: 1px solid rgba(255, 255, 255, .08);
  text-align: right;
  white-space: nowrap;
}
.nv-heat-table th:first-child,
.nv-heat-table td:first-child { text-align: left; }
.nv-heat-table td.src { opacity: .92; font-weight: 800; }
.nv-heat-table td.sum { font-weight: 900; }
.nv-heat-table tr.foot td { border-top: 1px solid rgba(255, 255, 255, .12); font-weight: 900; }

.nv-heat-empty {
  margin-top: 10px;
  opacity: .75;
  font: 600 12px/1.35 system-ui,-apple-system,"Segoe UI",Roboto,Arial;
}

.nv-heat-toast {
  position: fixed;
  right: 16px;
  bottom: 132px;
  z-index: 10000;
  padding: 10px 12px;
  border-radius: 12px;
  background: rgba(0, 0, 0, .78);
  border: 1px solid rgba(255, 255, 255, .14);
  color: #fff;
  font: 700 12px/1 system-ui,-apple-system,"Segoe UI",Roboto,Arial;
  opacity: 0;
  transform: translateY(6px);
  pointer-events: none;
  transition: opacity .18s ease, transform .18s ease;
}
.nv-heat-toast.is-on { opacity: 1; transform: translateY(0); }

@media (max-width: 560px) {
  .nv-heat-panel { right: 12px; bottom: 116px; }
  .nv-heat-kpis { grid-template-columns: 1fr 1fr; }
}

.nv-heat-chip {
  position: fixed;
  left: 16px;
  bottom: 16px;
  z-index: 50;
  border: 1px solid rgba(17, 17, 17, .08);
  background: #111;
  color: #f7f1e4;
  border-radius: 999px;
  padding: 10px 14px;
  font-size: 13px;
  letter-spacing: .01em;
  box-shadow: 0 12px 28px rgba(0, 0, 0, .18);
  cursor: pointer;
}

.nv-heat-chip:hover {
  box-shadow: 0 14px 32px rgba(0, 0, 0, .22);
}

.nv-heat-overlay {
  position: fixed;
  right: 16px;
  bottom: 72px;
  width: min(340px, 90vw);
  background: #111;
  color: #f7f1e4;
  border-radius: 16px;
  border: 1px solid rgba(255, 255, 255, .12);
  box-shadow: 0 18px 48px rgba(0, 0, 0, .28);
  padding: 14px;
  z-index: 60;
  display: none;
}

.nv-heat-overlay.is-on { display: block; }

.nv-heat-overlay header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 8px;
  margin-bottom: 10px;
}

.nv-heat-overlay h4 {
  margin: 0;
  font-size: 14px;
  letter-spacing: .01em;
}

.nv-heat-overlay button {
  border: 1px solid rgba(255, 255, 255, .18);
  background: rgba(255, 255, 255, .08);
  color: #f7f1e4;
  border-radius: 10px;
  padding: 6px 10px;
  font-size: 12px;
  cursor: pointer;
}

.nv-heat-overlay button:hover {
  background: rgba(255, 255, 255, .14);
}

.nv-heat-list {
  margin: 0;
  padding: 0;
  list-style: none;
  display: grid;
  gap: 6px;
}

.nv-heat-item {
  display: grid;
  grid-template-columns: 1.1fr 0.9fr 0.4fr;
  gap: 6px;
  padding: 6px 8px;
  background: rgba(255, 255, 255, .06);
  border-radius: 10px;
  font-size: 12px;
}

.nv-heat-head {
  display: grid;
  grid-template-columns: 1.1fr 0.9fr 0.4fr;
  gap: 6px;
  font-weight: 700;
  font-size: 12px;
  margin-bottom: 6px;
  opacity: .8;
}

.nv-card .nv-cta {
  margin-top: auto;
  align-self: flex-start;
}

.nv-wa {
  margin-top: 40px;
  background: #111;
  color: #f5f1e6;
  padding: 22px 18px;
  border-radius: 18px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16px;
}

.nv-wa h2 {
  margin: 0 0 6px;
}

.nv-wa p {
  margin: 0;
  color: #dcd4c0;
}

.nv-wa .nv-cta {
  background: #d4af37;
  color: #111;
  border-color: transparent;
  box-shadow: 0 10px 24px rgba(0, 0, 0, .2);
}

.nv-product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 14px;
  margin-top: 12px;
}

.nv-product-card {
  background: var(--nv-card);
  border: 1px solid var(--nv-line);
  border-radius: var(--nv-radius);
  padding: 14px;
  box-shadow: var(--nv-shadow);
}

.nv-product-card h3 {
  margin: 0 0 8px;
}

.nv-product-card p {
  margin: 0;
  color: var(--nv-muted);
}

.nv-wa-inline {
  display: inline-block;
  margin-top: 10px;
  font-weight: 600;
  text-decoration: underline;
  color: var(--nv-ink);
}

.nv-match-list {
  margin: 10px 0 0;
  padding-left: 18px;
  color: var(--nv-ink);
}

.nv-assurance {
  margin-top: 16px;
  background: rgba(0, 0, 0, .04);
  border-radius: 14px;
  padding: 12px;
  border: 1px solid rgba(0, 0, 0, .06);
}

@media (max-width: 720px) {
  main { padding: 110px 14px 60px; }
  .nv-hero { padding: 22px 16px; }
  .nv-wa { flex-direction: column; align-items: flex-start; }
  .nv-wa .nv-cta { width: 100%; text-align: center; justify-content: center; }
}

/* ===== HEATMAP PRO UI v1.1.2 (dock + collapse + drag + resize) ===== */
body.nv-heatmap-docked-left {
  padding-left: var(--nv-heatmap-dock-pad);
}

body.nv-heatmap-docked-right {
  padding-right: var(--nv-heatmap-dock-pad);
}

/* Docked görünüm: ince divider + soft edge shadow */
body.nv-heatmap-docked-left #nv-heat-panel {
  box-shadow: 16px 0 28px rgba(0, 0, 0, .22);
  border-right: 1px solid rgba(255, 255, 255, .10);
}
body.nv-heatmap-docked-right #nv-heat-panel {
  box-shadow: -16px 0 28px rgba(0, 0, 0, .22);
  border-left: 1px solid rgba(255, 255, 255, .10);
}

@media (max-width: 720px) {
  body.nv-heatmap-docked-left,
  body.nv-heatmap-docked-right {
    padding-left: 0 !important;
    padding-right: 0 !important;
  }
}

.nv-heat-overlay {
  position: fixed;
  left: 12px;
  top: 12px;
  width: 340px;
  height: calc(100vh - 24px);
  z-index: 9999;
  border-radius: 18px;
  overflow: hidden;
  box-shadow: 0 18px 50px rgba(0,0,0,.18);
  backdrop-filter: blur(10px);
  background: rgba(12, 12, 12, .9);
  color: #fff;
  border: 1px solid rgba(255,255,255,.12);
  display: none;
}

.nv-heat-overlay.is-on { display: block; }
.nv-heat-overlay.is-collapsed { width: 86px; }
.nv-heat-overlay.is-collapsed .nv-heat-hide-when-collapsed { display: none !important; }

.nv-heat-panel {
  height: 100%;
  overflow: auto;
  padding: 12px;
  font-size: 13px;
  line-height: 1.35;
}

.nv-heat-head {
  position: sticky;
  top: 0;
  z-index: 2;
  padding: 10px 10px 8px;
  margin: -12px -12px 10px;
  background: rgba(15,15,15,.86);
  backdrop-filter: blur(12px);
  border-bottom: 1px solid rgba(255,255,255,.08);
  cursor: grab;
  user-select: none;
}
.nv-heat-head:active { cursor: grabbing; }

.nv-heat-actions {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
  margin-top: 8px;
}

.nv-heat-actions button {
  padding: 8px 10px;
  border-radius: 999px;
  font-size: 12px;
}

.nv-heat-resize {
  position: absolute;
  right: 8px;
  bottom: 8px;
  width: 18px;
  height: 18px;
  border-radius: 6px;
  background: rgba(255,255,255,.12);
  border: 1px solid rgba(255,255,255,.16);
  cursor: nwse-resize;
}

@media (max-width: 760px){
  .nv-heat-overlay {
    left: 10px;
    right: 10px;
    top: auto;
    bottom: 10px;
    width: auto !important;
    height: min(62vh, 520px);
  }
  .nv-heat-resize { display: none; }
  .nv-heat-head { cursor: default; }
}

/* ===== HEATMAP DATA PANEL FIX v1.1.3 ===== */
.nv-heat-panel {
  display: flex;
  flex-direction: column;
  gap: 10px;
  padding: 12px;
  height: 100%;
  overflow: hidden;
}

.nv-heat-body {
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  gap: 8px;
  min-height: 0;
}

.nv-heat-head {
  flex: 0 0 auto;
  margin: -12px -12px 0;
  border-bottom: 1px solid rgba(255,255,255,.08);
}

.nv-heat-kpis {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 8px;
  padding: 10px 0 2px;
}
.nv-heat-kpi {
  border: 1px solid rgba(255,255,255,.10);
  background: rgba(255,255,255,.06);
  border-radius: 12px;
  padding: 8px 10px;
  min-width: 0;
}
.nv-heat-kpi .k { font-size: 11px; opacity: .8; }
.nv-heat-kpi .v { font-weight: 800; font-size: 16px; margin-top: 2px; }

.nv-heat-data {
  flex: 1 1 auto;
  overflow-y: auto;
  overflow-x: hidden;
  padding-right: 8px;
  border-top: 1px solid rgba(255,255,255,.06);
  padding-top: 10px;
}

.nvhm-sec {
  border: 1px solid rgba(255,255,255,.08);
  border-radius: 12px;
  padding: 10px 12px;
  background: rgba(255,255,255,.04);
}
.nvhm-sec-title {
  font-weight: 700;
  font-size: 12px;
  opacity: .9;
  margin-bottom: 8px;
}
.nvhm-kv { display: grid; gap: 6px; }
.nvhm-kv-row { display:flex; align-items:baseline; justify-content:space-between; gap: 10px; }
.nvhm-kv-row span { opacity:.85; }
.nvhm-kv-row b { font-weight:700; }
.nvhm-kv-row i { font-style:normal; opacity:.7; }
.nvhm-kv-foot { margin-top:6px; opacity:.85; }

.nv-heat-table-wrap {
  display: block;
  width: 100%;
  overflow-x: auto;
  overflow-y: hidden;
  -webkit-overflow-scrolling: touch;
  border: 1px solid rgba(255,255,255,.08);
  border-radius: 12px;
}

.nv-heat-data table {
  width: max(560px, 100%);
  border-collapse: collapse;
  font-variant-numeric: tabular-nums;
}
.nv-heat-data thead th {
  position: sticky;
  top: 0;
  background: rgba(15,15,15,.92);
  z-index: 1;
}
.nv-heat-data th, .nv-heat-data td {
  padding: 8px 8px;
  border-bottom: 1px solid rgba(255,255,255,.06);
  white-space: nowrap;
}

.nv-heat-section {
  overflow: visible;
  min-height: auto;
}

.nv-heat-overlay.is-collapsed .nv-heat-data { display: none !important; }

/* Heatmap panel: content pinned to top (no dead space) */
#nv-heat-panel.nv-heat-panel {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  height: 100%;
  max-height: calc(100vh - 24px);
  width: 100%;
  max-width: 420px;
  overflow: hidden;
}

#nv-heat-head {
  flex: 0 0 auto;
  margin: 0;
}

#nv-heat-kpis {
  flex: 0 0 auto;
}

#nv-heat-data {
  flex: 1 1 auto;
  min-height: 0;
  overflow: auto;
}

/* Heatmap: compact default size + softer backdrop */
.nv-heat-overlay {
  padding: 10px;
  width: 380px;
  max-width: 420px;
  height: 78vh;
  max-height: calc(100vh - 24px);
  background: rgba(0,0,0,.22);
  backdrop-filter: blur(2px);
}

.nv-heat-overlay.is-collapsed {
  width: 86px;
}

.nv-heat-overlay.is-collapsed #nv-heat-panel {
  width: 100%;
  max-width: none;
}

@media (max-width: 760px) {
  .nv-heat-overlay {
    width: auto !important;
    max-width: calc(100vw - 20px);
    height: min(62vh, 520px);
    max-height: min(62vh, 520px);
  }
  #nv-heat-panel.nv-heat-panel {
    max-width: 100%;
  }
}

/* === Heatmap scrolling: single vertical; horizontal only on tables === */
#nv-heat-data {
  overflow-x: hidden !important;
  overflow-y: auto !important;
  scrollbar-gutter: stable;
}

#nv-heat-data * {
  overflow-x: hidden;
}

#nv-heat-data .nv-heat-table-wrap {
  overflow-x: auto !important;
  overflow-y: hidden !important;
}

#nv-heat-data table {
  min-width: 560px;
  white-space: nowrap;
  overflow-x: visible;
}

#nv-heat-data .nv-heat-section,
