{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["meta", "prompts"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["pack", "version", "owner"],
      "properties": {
        "pack": { "type": "string" },
        "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+" },
        "owner": { "type": "string" },
        "lastReview": { "type": "string", "format": "date" }
      }
    },
    "prompts": {
      "type": "array"
    }
  }
}