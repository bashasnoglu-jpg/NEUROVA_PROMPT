{
  "name": "neurova-spa-wellness",
  "version": "1.0.0",
  "description": "Modern, responsive static website for NEUROVA Spa & Wellness with PWA capabilities.",
  "main": "tr/index.html",
  "scripts": {
    "start": "http-server . -a localhost -p 8000 -o tr/index.html",
    "serve": "http-server . -a localhost -p 8000 -o tr/index.html",
    "build:css": "tailwindcss -i ./input.css -o ../assets/css/style.css --watch",
    "format": "prettier --write \"**/*.{html,css,js,json,md}\"",
    "test:unit": "jest",
    "test:e2e": "cypress open",
    "test:e2e:run": "cypress run",
    "prepare": "husky"
  },
  "keywords": [
    "spa",
    "wellness",
    "pwa",
    "static-site"
  ],
  "author": "NEUROVA Tech Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "http-server": "^14.1.1",
    "postcss": "^8.4.35",
    "autoprefixer": "^10.4.18",
    "tailwindcss": "^3.4.1",
    "prettier": "^3.2.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "cypress": "^13.6.6",
    "axe-core": "^4.8.4",
    "cypress-axe": "^1.5.0",
    "husky": "^9.0.11",
    "cypress-audit": "^1.1.0",
    "lighthouse": "^11.0.0"
  }
}